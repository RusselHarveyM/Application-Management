@model Basecode.Data.ViewModels.ShortListedViewModel

<style>
    .button-wrapper {
        display: inline-block;
        margin-right: 20px;
    }

    button {
        background-color: inherit;
        border: none;
    }

    .shortlist-wrapper {
        padding: 1rem;
        height: 100vh;
    }

    .table-wrapper {
        padding: 1rem;
        height: 100%;
        border-radius: 15px;
        background-color: #fff;
    }

    .highlighted {
        color: #EC2224;
        border-bottom: 2px solid #EC2224;
    }
</style>

<div class="shortlist-wrapper d-flex flex-column gap-3">
    <nav>
        <div class="button-wrapper">
            <button class="highlighted" id="hrButton">FOR HR SCREENING</button>
        </div>
        <div class="button-wrapper">
            <button id="backgroundButton">FOR BACKGROUND CHECK</button>
        </div>
    </nav>

    <div class="table-wrapper d-flex flex-column">
        <div id="hrPartialView">
            <partial name="_ShortlistPartialView" model="Model.HRShortlisted"/>
        </div>
        <div id="backgroundPartialView" style="display: none;">
            <partial name="_ShortlistPartialView" model="Model.TechShortlisted"/>
        </div>
    </div>
</div>

<script>
    var hrButton = document.getElementById('hrButton');
    var backgroundButton = document.getElementById('backgroundButton');

    function toggleHRScreening() {
        console.log("HR Screening clicked");
        hrButton.classList.add('highlighted');
        backgroundButton.classList.remove('highlighted');

        document.getElementById('hrPartialView').style.display = 'block';
        document.getElementById('backgroundPartialView').style.display = 'none';
    }

    function toggleBackgroundCheck() {
        console.log("Background Check clicked");
        hrButton.classList.remove('highlighted');
        backgroundButton.classList.add('highlighted');

        document.getElementById('hrPartialView').style.display = 'none';
        document.getElementById('backgroundPartialView').style.display = 'block';
    }



    hrButton.addEventListener("click", toggleHRScreening);
    backgroundButton.addEventListener("click", toggleBackgroundCheck);
</script>