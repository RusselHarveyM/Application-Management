@model Basecode.Data.ViewModels.ApplicantViewModel

@{
    ViewData["Title"] = "PersonalInformation";
    var errorMessage = TempData["ErrorMessage"] as string;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <script>
        alert('@Html.Raw(errorMessage)');
    </script>
}

<div class="container d-flex flex-column align-items-center justify-content-center mt-5 mb-5" style="width: 800px">
    <div class="container d-flex flex-row align-items-start justify-content-center gap-2 mb-5">
        <div class="d-flex flex-column align-items-center justify-content-start">
            <div class="d-flex flex-row align-items-center justify-content-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#EC3123" class="bi bi-1-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0ZM9.283 4.002H7.971L6.072 5.385v1.271l1.834-1.318h.065V12h1.312V4.002Z" />
                </svg>
                <p class="mb-0" style="color: #EC3123;">Personal Information</p>
            </div>
            <hr class="container opacity-100" style="height: 5px; color: #EC3123;" />
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#424856" class="bi bi-chevron-right mt-1" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z" />
        </svg>
        <div class="d-flex flex-row align-items-center justify-content-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#EC3123" class="bi bi-2-circle" viewBox="0 0 16 16">
                <path d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8Zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0ZM6.646 6.24v.07H5.375v-.064c0-1.213.879-2.402 2.637-2.402 1.582 0 2.613.949 2.613 2.215 0 1.002-.6 1.667-1.287 2.43l-.096.107-1.974 2.22v.077h3.498V12H5.422v-.832l2.97-3.293c.434-.475.903-1.008.903-1.705 0-.744-.557-1.236-1.313-1.236-.843 0-1.336.615-1.336 1.306Z" />
            </svg>
            <p class="mb-0">References</p>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#424856" class="bi bi-chevron-right mt-1" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z" />
        </svg>
        <div class="d-flex flex-row align-items-center justify-content-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#EC3123" class="bi bi-3-circle" viewBox="0 0 16 16">
                <path d="M7.918 8.414h-.879V7.342h.838c.78 0 1.348-.522 1.342-1.237 0-.709-.563-1.195-1.348-1.195-.79 0-1.312.498-1.348 1.055H5.275c.036-1.137.95-2.115 2.625-2.121 1.594-.012 2.608.885 2.637 2.062.023 1.137-.885 1.776-1.482 1.875v.07c.703.07 1.71.64 1.734 1.917.024 1.459-1.277 2.396-2.93 2.396-1.705 0-2.707-.967-2.754-2.144H6.33c.059.597.68 1.06 1.541 1.066.973.006 1.6-.563 1.588-1.354-.006-.779-.621-1.318-1.541-1.318Z" />
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0ZM1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8Z" />
            </svg>
            <p class="mb-0">Confirmation</p>
        </div>
    </div>
    <form asp-controller="PublicApplication" asp-action="Reference" method="post" enctype="multipart/form-data">
        <input type="hidden" name="jobId" value="@TempData["JobOpeningId"]" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container d-flex flex-column align-items-center justify-content-center">
            <div class="container">
                <div class="row align-items-center justify-content-center text-end mb-4">
                    <div class="col-sm-2">
                        <p class="mb-0">Name</p>
                    </div>
                    <div class="col-sm-10">
                        <div class="d-flex gap-2">
                            <div class="d-flex">
                                <input asp-for="Firstname" class="form-control" placeholder="First name"/>
                            </div>
                            <div class="d-flex">
                                <input asp-for="Middlename" class="form-control" placeholder="Middle name" />
                            </div>
                            <div class="d-flex">
                                <input asp-for="Lastname" class="form-control" placeholder="Last name" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row align-items-center justify-content-center text-end mb-4">
                    <div class="col-sm-2">
                        <p class="mb-0">Birthdate</p>
                    </div>
                    <div class="col-sm-10">
                        <div class="d-flex gap-2">
                            <div class="d-flex">
                                <input type="date" value="" asp-for="Birthdate" class="form-control" style="width: 163px;" />
                            </div>
                            <div class="d-flex">
                                <p class="mb-0 mt-1 me-2">Age</p>
                                <input asp-for="Age" value="" class="form-control" placeholder="Age" />
                            </div>
                            <div class="d-flex">
                                <p class="mb-0 mt-1 me-2">Gender</p>
                                <select asp-for="Gender" class="form-control" style="width: 163px;">
                                    <option value="" disabled selected>Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row align-items-center justify-content-center text-end mb-4">
                    <div class="col-sm-2">
                        <p class="mb-0">Nationality</p>
                    </div>
                    <div class="col-sm-10">
                        <div class="gap-2">
                            <input asp-for="Nationality" class="form-control" placeholder="Nationality" />
                        </div>
                    </div>
                </div>
                <div class="row align-items-center justify-content-center text-end mb-4">
                    <div class="col-sm-2">
                        <p class="mb-0">Address</p>
                    </div>
                    <div class="col-sm-10">
                        <div class="gap-2">
                            <input asp-for="Street" class="form-control" placeholder="Street" />
                        </div>
                    </div>
                </div>
                <div class="row align-items-center justify-content-center text-end mb-4">
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-10">
                        <div class="d-flex gap-2">
                            <div class="d-flex">
                                <input asp-for="City" class="form-control" placeholder="City" />
                            </div>
                            <div class="d-flex">
                                <input asp-for="Province" class="form-control" placeholder="Province" />
                            </div>
                            <div class="d-flex">
                                <input asp-for="Zip" class="form-control" placeholder="Zip" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row align-items-center justify-content-center text-end mb-4">
                    <div class="col-sm-2">
                        <p class="mb-0">Phone</p>
                    </div>
                    <div class="col-sm-10">
                        <div class="gap-2">
                            <input asp-for="Phone" class="form-control" placeholder="09123456789" />
                        </div>
                    </div>
                </div>
                <div class="row align-items-center justify-content-center text-end mb-4">
                    <div class="col-sm-2">
                        <p class="mb-0">Email</p>
                    </div>
                    <div class="col-sm-10">
                        <div class="gap-2">
                            <input type="email" asp-for="Email" class="form-control" placeholder="example@domain.com" />
                        </div>
                    </div>
                </div>
                <div class="row align-items-center justify-content-center text-end mb-4">
                    <div class="col-sm-2">
                        <p class="mb-0">CV</p>
                    </div>
                    <div class="col-sm-10">
                        <div class="container d-flex flex-column align-items-center justify-content-center rounded p-1" style="border-style: dashed; border-color: #E7EAED; background-color: #FAFAFB;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#424856" class="bi bi-cloud-arrow-up-fill" viewBox="0 0 16 16">
                                <path d="M8 2a5.53 5.53 0 0 0-3.594 1.342c-.766.66-1.321 1.52-1.464 2.383C1.266 6.095 0 7.555 0 9.318 0 11.366 1.708 13 3.781 13h8.906C14.502 13 16 11.57 16 9.773c0-1.636-1.242-2.969-2.834-3.194C12.923 3.999 10.69 2 8 2zm2.354 5.146a.5.5 0 0 1-.708.708L8.5 6.707V10.5a.5.5 0 0 1-1 0V6.707L6.354 7.854a.5.5 0 1 1-.708-.708l2-2a.5.5 0 0 1 .708 0l2 2z" />
                            </svg>
                            <p id="file-name" class="mb-0" style="font-size: 20px;">Drop file here</p>
                            <p class="mb-0" style="font-size: 15px;">OR</p>
                            <input type="file" id="file-upload" name="fileUpload" class="form-control" style="display: none;" accept="application/pdf">
                            <label for="file-upload" class="btn" style="color: #EC3123; border-color: #EC3123;">Browse file</label>
                            <p class="mb-0" style="font-size: 10px;">Supported format: PDF</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container d-flex align-items-center justify-content-end mt-5">
                <button type="submit" value="Create" class="btn" style="background-color: #EC3123; color:white; width: 100px;">Next ></button>
            </div>
        </div>
    </form>
</div>

<script>
    const fileUpload = document.getElementById('file-upload');
    const fileName = document.getElementById('file-name');

    fileUpload.addEventListener('change', function () {
        if (fileUpload.files.length > 0) {
            fileName.textContent = fileUpload.files[0].name;
        } else {
            fileName.textContent = 'Drop file here';
        }
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
