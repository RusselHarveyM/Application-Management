    <div class="col-12 ">
        <div class="table-responsive">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <img  class="latestJobImage" src="images/home/ui-ux-designer.png" alt="Card image cap"/>
                    </tr>
                    <tr>
                        <img  class="latestJobImage" src="images/home/csharp.png" alt="Card image cap"/>
                    </tr>
                    <tr>
                        <img class="latestJobImage" src="images/home/reactjs developer.png" alt="Card image cap"/>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-12 col-sm-3">

    </div>
</div>

<!--See more & Top Up Feature-->
