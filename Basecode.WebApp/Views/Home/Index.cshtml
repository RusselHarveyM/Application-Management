@using Basecode.Data.ViewModels;
@model List<JobOpeningViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<!--Search Feature-->
<div style="margin-top: 3rem;" class="text-center">
    <div style="font-weight: 600"  class="display-5">
        Ready to join the <span class="text-danger">Alliance</span> team?
    </div> 
    <div style="margin-top: 2rem;">
        <form actions="">
            <div class="form-group row">
                <div class="col-md-2">
                </div>
                <div class="col-md-7">
                    <input type="text" class="form-control" id="search" name="search" placeholder="&#xF002; Search for jobs..." style="font-family:Arial, FontAwesome; color: gray;"/>
                </div>                  
                <div class="col-md-1">
                    <button type="submit" class="btn btn-danger">Search</button>
                </div>
                <div class="col-md-3">
                </div>
            </div> 
        </form>
    </div>
</div>

<!--Multiple Carousel-->
<div id="carouselExampleControls" class="carousel" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item ">
                <div class="card">
                <div class="img-wrapper">
                        <img style="width: 200px; height: 200px;"  src="images/home/FinanceImage.png" alt="Card image cap">
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="card">
                <div class="img-wrapper">
                    <img style="width: 200px; height: 200px;" src="images/home/HumanResourceImage.png" alt="Card image cap">
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="card">
                <div class="img-wrapper">
                    <img style="width: 200px; height: 200px;" src="images/home/MarketingImage.png" alt="Card image cap">
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="card">
                <div class="img-wrapper">
                    <img style="width: 200px; height: 200px;" src="images/home/TechnicalImage.png" alt="Card image cap">
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="card">
                <div class="img-wrapper">
                    <img style="width: 200px; height: 200px;" src="images/home/MarketingImage.png" alt="Card image cap">
                </div>
            </div>
        </div>
    </div>
    <div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <img style="padding-right: 100px;" src="images/home/CarouselRightIcon.png" alt="Carousel Right Icon" />
        </a>
    </div>
    <div>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <img style="padding-left: 100px;" src="images/home/CarouselLeftIcon.png" alt="Carousel Left Icon"/>
        </a>
    </div>
</div>

<!--Latest Job text-->
<div style="padding-top: 100px;" class="container">
<div class="row">
    <div style="font-weight: 600" class="col-12 display-5 text-danger text-center">
        Latest Jobs
    </div>
    <p style="color: gray;" class="text-center">
        Exercitation dolore reprehenderit fugi
    </p>
</div>
</div>

<!--Latest Job cards-->
@if (Model.Count > 0)
{
<div class="jobContainer">
    <div class="row col-12 mt-4">
        @foreach (var jobOpening in Model)
        {
            <div class="col-lg-4 col-md-4 col-sm-4 col">
            <div class="card mb-4 cardForJobs">
                <div class="card-body">
                    <div class="card-header">
                            <img src="~/images/job-icon-dummy.png" alt="Card Image" class="card-image">
                        <h5 class="card-title">@jobOpening.Title<br><span class="fw-light">₱30K - ₱60K</span></h5>
                        </div>
                        <div class="card-header">
                            <img src="~/images/home-icon.png" alt="Card Image" class="card-image-small">
                            <p class="card-text">Pariator</p>
                        </div>
                        <div class="card-header">
                            <img src="~/images/location-icon.png" alt="Card Image" class="card-image-small">
                            <p class="card-text">@jobOpening.Location</p>
                        </div>
                        <div class="card-header">
                            <img src="~/images/bookmark-icon.png" alt="Card Image" class="card-image-small">
                            <p class="card-text">@jobOpening.WorkSetup</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
}
else
{
    <p>No job openings available.</p>
}

<!--See more & Top Up Feature-->
<div style="margin-top: 2rem; margin-bottom: 2rem;" class="row col-12">
    <div class="col-lg-12 col-md-12 col-sm-12 col text-center">
        <button class="btn btn-danger">See more</button>
    </div>
</div>

 <!--Return Top feature-->
<div style="margin-bottom: 2rem;" class="row col-12">
    <div class="col-lg-11 col-md-11 col-sm-11">
    </div>
    <div style="text-align: right;" class="col-lg-1 col-md-1 col-sm-1 col">
        <img src="images/home/GoUp.png" width="40"/>
    </div>
</div>