@{
    ViewData["Title"] = "Home Page";
}

<!--Search Feature-->
<div class="text-center">
    <div class="display-5 fw-bold">
        Ready to join the <span class="text-danger">Alliance</span> team?
    </div> 
    <div style="padding-top: 50px;">
        <form actions="">
            <div class="form-group row">
                <div class="col-md-3">
                </div>
                <div class="col-md-5">
                    <input type="text" class="form-control" id="search" name="search" placeholder="&#xF002; Search" style="font-family:Arial, FontAwesome" />
                </div>                  
                <div class="col-md-1">
                    <button type="submit" class="btn btn-danger">Search</button>
                </div>
                <div class="col-md-3">
                </div>
            </div> 
        </form>
    </div>
</div>

<!--Multiple Carousel-->
<div style="padding-top: 50px;" id="carouselExampleControls" class="container col-12 carousel" data-ride="carousel">
  <div class="col-md-8 carousel-inner">
    <div class="carousel-item active">
         <div class="card">
            <div class="img-wrapper">
                <img  src="images/home/FinanceImage.png" alt="Card image cap">
            </div>
        </div>
    </div>
    <div class="carousel-item">
      <div class="card">
            <div class="img-wrapper">
                <img src="images/home/HumanResourceImage.png" alt="Card image cap">
            </div>
        </div>
    </div>
    <div class="carousel-item">
      <div class="card">
            <div class="img-wrapper">
                <img src="images/home/MarketingImage.png" alt="Card image cap">
            </div>
        </div>
    </div>
    <div class="carousel-item">
      <div class="card">
            <div class="img-wrapper">
                <img src="images/home/TechnicalImage.png" alt="Card image cap">
            </div>
        </div>
    </div>
    <div class="carousel-item">
      <div class="card">
            <div class="img-wrapper">
                <img src="images/home/MarketingImage.png" alt="Card image cap">
            </div>
        </div>
    </div>
  </div>
  <div class="col-md-2">
      <a 100px;" class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <img src="images/home/CarouselRightIcon.png" alt="Carousel Right Icon"/>
    </a>
  </div>
  <div  class="col-md-2">
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <img src="images/home/CarouselLeftIcon.png" alt="Carousel Left Icon"/>
      </a>
  </div>
</div>

<!--Latest Job text-->
