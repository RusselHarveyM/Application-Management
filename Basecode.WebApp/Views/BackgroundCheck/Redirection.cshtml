@if (ViewBag.IsFormSubmitted)
{
    <div class="container mt-5">
        <div class="row text-center justify-content-center">
            <div class="col-md-6">
                <h4>Thank you for participating</h4>
                <p>Redirecting to home...</p>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="row text-center justify-content-center">
            <div class="col-md-6">
                <h4>You have already submitted the form</h4>
                <p>Redirecting to home...</p>
            </div>
        </div>
    </div>
}

<script>
    setTimeout(function () {
        window.location.href = "/Home"; // Redirect to the home page after 5 seconds
    }, 5000); // 5000 milliseconds = 5 seconds
</script>