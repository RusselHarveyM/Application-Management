@model Basecode.Data.ViewModels.BackgroundCheckFormViewModel;

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    .container {
        max-width: 800px;
        margin: 15px auto;
        padding: 65px;
        background-color: #fff;
        box-shadow: 2 4px 6px rgba(0, 0, 0, 0.1);
        border: 1px solid lightgray;
        border-radius: 1rem;
    }

    h1 {
        font-size: 24px;
        margin-bottom: 0.1rem;
    }

    label {
        font-size: 16px;
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    textarea {
        width: 85%;
        font-size: 16px;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .inline-group {
        display: flex;
        justify-content: space-between;
    }

        .inline-group .input-field {
            flex: 1;
        }

    .form-group:last-child {
        margin-bottom: 0;
    }

    button {
        background-color: red;
        color: #fff;
        font-size: 18px;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        float: right;
    }
</style>

<div class="d-flex justify-content-center">
    <div class="form-group">
        <h1 class="mt-0">Applicant's Personal Information</h1>
        <hr class="opacity-120 mb-4" style="height: 1px; color: #424856;" />
        <div class="inline-group gap-4">
            <div class="input-field">
                <label for="applicant_last_name">Last Name:</label>
                <input readonly type="text" id="applicant_last_name" value="@ViewData["bgApplicantLastname"]" placeholder="Last Name" style="background-color: #F3F4F6; color: #72777D;">
            </div>
            <div class="input-field">
                <label for="applicant_first_name">First Name:</label>
                <input readonly type="text" id="applicant_first_name" value="@ViewData["bgApplicantFirstname"]" placeholder="First Name" style="background-color: #F3F4F6; color: #72777D;">
            </div>
        </div>
        <div class="inline-group gap-4">
            <div class="input-field">
                <label for="position_applied">Position Applied:</label>
                <input readonly type="text" id="position_applied" value="@ViewData["bgApplicantJob"]" placeholder="Position" style="background-color: #FEF2F1; color: #F58980;">
            </div>
            <div class="input-field">
                <label for="date_of_application">Date of Application:</label>
                <input readonly type="text" id="date_of_application" value="@ViewData["bgApplicantDate"]" placeholder="DD/MM/YYYY" style="background-color: #FEF2F1; color: #F58980;">
            </div>
        </div>
        <form asp-action="FormOk" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger error-style"></div>
            <div class="form-group">
                <input asp-for="CharacterReferenceId" type="text" value="@ViewData["bgcrId"]" style="display:none;">
                <input asp-for="UserId" type="text" value="@ViewData["bgUserId"]" style="display:none;">
                <h1 class="mt-4">Referee's Personal Information</h1>
                <hr class="opacity-120 mb-4" style="height: 1px; color: #424856;" />
                <div class="inline-group gap-4">
                    <div class="input-field">
                        <label for="referee_last_name">Last Name:</label>
                        <input asp-for="Lastname" type="text" id="referee_last_name" placeholder="Last Name" style="background-color: #F3F4F6; color: #72777D;">
                        <span asp-validation-for="Lastname" class="text-danger error-style"></span>
                    </div>
                    <div class="input-field">
                        <label for="referee_first_name">First Name:</label>
                        <input asp-for="Firstname" type="text" id="referee_first_name" placeholder="First Name" style="background-color: #F3F4F6; color: #72777D;">
                        <span asp-validation-for="Firstname" class="text-danger error-style"></span>
                    </div>
                </div>

                <div class="inline-group gap-4">
                    <div class="input-field">
                        <label for="email_address">Email Address:</label>
                        <input asp-for="Email" type="text" id="email_address" placeholder="example@example.com" style="background-color: #FEF2F1; color: #72777D;">
                        <span asp-validation-for="Email" class="text-danger error-style"></span>
                    </div>
                    <div class="input-field">
                        <label for="phone_number">Phone Number:</label>
                        <input asp-for="PhoneNumber" type="text" id="phone_number" placeholder="09xxxxxxxxx" style="background-color: #FEF2F1; color: #72777D;">
                        <span asp-validation-for="PhoneNumber" class="text-danger error-style"></span>
                    </div>
                </div>

                <label for="relationship_to_applicant">Relationship to the Applicant:</label>
                <input asp-for="Relationship" type="text" style="width: 41%; background-color: #F3F4F6; color: #72777D;" id="relationship_to_applicant" placeholder="e.g. Co-worker">
                <span asp-validation-for="Relationship" class="text-danger error-style"></span>
            </div>

            <div class="form-group">
                <h1 class="mt-4">Character Assessment</h1>
                <hr class="opacity-120 mb-4" style="height: 1px; color: #424856;" />
                <label for="known_duration">How long have you known the applicant?</label>
                <textarea asp-for="Q1" id="known_duration" style="width: 100%; padding: 20px; background-color: #FEF2F1; color: #72777D; margin-bottom: 1.5rem;" rows="4" placeholder="Your answer here..."></textarea>
                <div>
                    <span asp-validation-for="Q1" class="text-danger error-style"></span>
                </div>

                <label for="character_strengths">What would you say about the applicant's character, strengths, and work ethics?</label>
                <textarea asp-for="Q2" id="character_strengths" style="width: 100%; padding: 20px; background-color: #F3F4F6; color: #72777D; margin-bottom: 1.5rem;" rows="4" placeholder="Your answer here..."></textarea>
                <div>
                    <span asp-validation-for="Q2" class="text-danger error-style"></span>
                </div>

                <label for="suitable_for_position">Do you believe the applicant is suitable for the position he/she applied for?</label>
                <textarea asp-for="Q3" id="suitable_for_position" style="width: 100%; padding: 20px; background-color: #FEF2F1; color: #72777D; margin-bottom: 1.5rem;" rows="4" placeholder="Your answer here..."></textarea>
                <div>
                    <span asp-validation-for="Q3" class="text-danger error-style"></span>
                </div>

                <label for="additional_comments">
                    Is there anything else that you would like to add that may be relevant to the applicant's candidacy?
                </label>
                <textarea asp-for="Q4" id="additional_comments" style="width: 100%; padding: 20px; background-color: #F3F4F6; color: #72777D; margin-bottom: 1.5rem;" rows="4" placeholder="Your answer here..."></textarea>
                <div>
                    <span asp-validation-for="Q4" class="text-danger error-style"></span>
                </div>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}