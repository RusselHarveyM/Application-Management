@{
    Layout = null; // This line is used to remove the default layout
    ViewData["Title"] = "Public Application Form Page";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Public Application Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <style>
        .shadow-box {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: flex-start;
            width: auto;
            background-color: #ffffff;
            padding: 20px;
            box-shadow: 0 0 10px 4px rgba(0, 0, 0, 0.2);
            margin: auto;
            margin-top: 50vh;
            transform: translateY(-50%);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3 shadow-box">
                <h1>Applicant Information Form</h1>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-4">
                            <p>This is the smaller column.</p>
                        </div>
                        <div class="col-md-8">
                            <p>This is the larger column.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>
