
@{
    ViewData["Title"] = "Tracker Page";
}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        .button {
            width: 145px;
            height: 52px;
            padding: 0 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: Manrope;
            font-size: 18px;
            line-height: 28px;
            color: #FFFFFFFF;
            background: #D02A19FF;
            opacity: 1;
            border: none;
            border-radius: 0px 4px 4px 0px;
            gap: 8px;
        }

        .button .icon {
            width: 24px;
            height: 24px;
            fill: #FFFFFFFF;
        }

        .button:hover {
            color: #FFFFFFFF;
            background: #AB2314FF;
        }
    </style>
  </head>
  <body>
      <div>
          <div>
              <h1>Track Application Status</h1>
              <div class="input-group mb-3" style="width: 600px">
                  <input type="text" class="form-control" placeholder="Application ID" aria-label="Application ID" aria-describedby="button-track">
                  <button class="button" type="button" id="button-track">
                      <i class="fas fa-search"></i> Track
                  </button>
              </div>
          </div>
      </div>
  </body>
</html>