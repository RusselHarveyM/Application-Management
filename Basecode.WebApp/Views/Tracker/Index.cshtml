@model Basecode.Data.ViewModels.ApplicationViewModel;

@{
    ViewData["Title"] = "Tracker Page";
}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .button
        {
            width: 145px;
            height: 45px;
            padding: 0 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: Manrope;
            font-size: 18px;
            line-height: 28px;
            color: #FFFFFFFF;
            background: #D02A19FF;
            opacity: 1;
            border: none;
            border-radius: 0px 4px 4px 0px;
            gap: 8px;
        }

        .button .icon
        {
            width: 24px;
            height: 24px;
            fill: #FFFFFFFF;
        }

        .button:hover
        {
            color: #FFFFFFFF;
            background: #AB2314FF;
        }
        
        .table th
        {
            padding: 0.5rem;
            color: #D02A19;
            font-size: 18px;
            text-align: center;
            background: #F3F4F6;
            width: 20%;
        }

        .table tbody
        {
            padding: 0.5rem;
            color: #171A1FFF;
            font-size: 16px;
            text-align: center;
        }
    </style>
  </head>
  <body>
      <div>
          <div class="d-flex flex-column justify-content-center align-items-center">
              <h1 class="mb-5 mt-5">Track Application Status</h1>
              <form id="track-form" asp-controller="Tracker" asp-action="GetApplicationById" method="get" class="input-group mb-5 w-50">
                  <input type="text" name="id" class="form-control" placeholder="Application ID" aria-label="Application ID" aria-describedby="button-track">
                  <button class="button" type="submit" id="button-track">
                      <i class="bi bi-search"></i> Track
                  </button>
              </form>
          </div>
          <div class="alert alert-danger" id="error-message" style="display: none;">
              Please enter your Application ID.
          </div>
          <div id="table-container" class="mt-5 mb-5" style="display: none;">
              <table class="table table-bordered">
                  <thead>
                      <tr>
                          <th scope="col">APPLICATION ID</th>
                          <th scope="col">APPLICANT NAME</th>
                          <th scope="col">POSITION APPLIED</th>
                          <th scope="col">LAST UPDATED</th>
                          <th scope="col">STATUS</th>
                      </tr>
                  </thead>
                  <tbody id="table-body">
                  </tbody>
              </table>
          </div>
      </div>
      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
      <script>
          $(document).ready(function ()
          {
              $('#track-form').submit(function (e)
              {
                  e.preventDefault();
                  var form = $(this);
                  var url = form.attr('action');
                  var formData = form.serialize();
                  
                  // Check if the application ID is empty
                  var applicationId = form.find('input[name="id"]').val();
                  if (applicationId.trim() === '')
                  {
                      // Show the error message
                      $('#table-container').hide();
                      $('#error-message').show();
                      return;
                  }
                  
                  $.ajax({
                      type: 'GET',
                      url: url,
                      data: formData,
                      success: function (response)
                      {
                          console.log(response);
                          if (response.success)
                          {
                              // Display the table and populate it with data
                              $('#table-container').show();
                              var application = response.data;
                              var tableRow = `
                                  <tr>
                                      <td>${application.id}</td>
                                      <td>${application.applicantId}</td>
                                      <td>${application.jobOpeningId}</td>
                                      <td>${new Date(application.updateTime).toLocaleString()}</td>
                                      <td><b>${application.status}<b></td>
                                  </tr>`;
                              $('#table-body').html(tableRow);
                              $('#error-message').hide(); // Hide the error message if previously shown
                          }
                          else
                          {
                              // Hide the table and show the error message
                              $('#table-container').hide();
                              $('#error-message').text(response.message); // Update the error message text
                              $('#error-message').show();
                          }
                      },
                      error: function ()
                      {
                          // Hide the table and show the error message
                          $('#table-container').hide();
                          $('#error-message').text('An error occurred. Please try again later.'); // Update the error
                          $('#error-message').show();
                      }
                  });
              });
          });
      </script>
  </body>
</html>