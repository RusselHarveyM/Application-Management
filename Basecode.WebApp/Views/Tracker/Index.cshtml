@model Basecode.Data.ViewModels.ApplicationViewModel;

@{
    ViewData["Title"] = "Tracker Page";
}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .button
        {
            width: 145px;
            height: 45px;
            padding: 0 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: Manrope;
            font-size: 18px;
            line-height: 28px;
            color: #FFFFFFFF;
            background: #D02A19FF;
            opacity: 1;
            border: none;
            border-radius: 0px 4px 4px 0px;
            gap: 8px;
        }

        .button .icon
        {
            width: 24px;
            height: 24px;
            fill: #FFFFFFFF;
        }

        .button:hover
        {
            color: #FFFFFFFF;
            background: #AB2314FF;
        }
    </style>
  </head>
  <body>
      <div>
          <div class="d-flex flex-column justify-content-center align-items-center">
              <h1 class="mb-5 mt-5">Track Application Status</h1>
              <form id="track-form" asp-controller="Tracker" asp-action="ResultView" method="get" class="input-group mb-5 w-50">
                  <div class="input-group">
                      <input type="text" asp-for="Id" class="form-control" placeholder="Application ID" aria-label="Application ID" aria-describedby="button-track">
                      <button class="button" type="submit" id="button-track">
                          <i class="bi bi-search"></i> Track
                      </button>
                  </div>
                  <span asp-validation-for="Id" class="text-danger"></span>
              </form>
          </div>

          @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
          {
            <div class="alert alert-danger text-center" id="error-message">
                @ViewData["ErrorMessage"]
            </div>
          }

          @if (Model != null)
          {
              <div class="mt-5 mb-5">
                  @Html.Partial("_ResultView", Model)
              </div>
          }
      </div>

      @section Scripts
      {
          <partial name="_ValidationScriptsPartial" />
      }
  </body>
</html>