@{
    Layout = "/Views/Shared/_LoginAdmin.cshtml";
}
@*For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860*@
<div class="container d-flex align-items-center justify-content-center w-100 p-3">
    <!--inner layer-->
    <div class="row align-items-center">
        <div class="col-md-6 align-self-center">
            <h1 class="mb-3 text-center sign-font">Sign-in</h1>
            <form asp-action="Login">
                <div class="form-group p-2 bg-light">
                    <label for="email" class="control-label text-black text-strong">Email</label>
                    <input name="email" class="form-control p-1" placeholder="example.email@gmail.com" />
                </div>
                <div class="form-group p-2 bg-light mb-1">
                    <label for="password" class="control-label text-black text-strong">Password</label>
                    <div class="input-group">
                        <input type="password" name="password" id="password" min="8" required class="form-control p-1" placeholder="Enter at least 8+ characters" inputmode="" />
                        <span id="eye" class="input-group-text visually-hidden"><i class="fa-solid fa-eye"></i></span>
                        <span id="eyeslash" class="input-group-text show"><i class="fas fa-eye-slash"></i></span>
                    </div>
                </div>
                <div class="form-check d-flex justify-content-between align-items-center mb-1">
                    <div class="flex-grow-1">
                        <input type="checkbox" class="form-check-input" id="remember">
                        <label class="form-check-label text-smaller" for="remember">Remember me</label>
                    </div>
                    <span><a href="#" id="remember" class="text-smaller">Forgot Password</a></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Sign-in" class="w-100 btn bg-color text-white p-3 rounded-3 btn-sign" />
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <img src="~/img/login/sign_in.png" alt="defaultloginimg" class="img-fluid bg-color" />
        </div>
    </div>
</div>