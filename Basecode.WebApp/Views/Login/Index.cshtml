@model Basecode.Data.ViewModels.LoginViewModel
@{
    Layout = "/Views/Shared/_LoginAdmin.cshtml";
    ViewData["Login"] = "Login page";
}

<div class="container d-flex align-items-center justify-content-center w-100 p-3">
    <div class="row">
        <div class="col-md-6 align-self-center">
            <h1 class="mb-3 text-center sign-font">Sign-in</h1>
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger error-style"></div>
                <div class="form-group p-2 bg-light">
                    <label asp-for="Email" class="control-label text-black text-strong">Email</label>
                    <input asp-for="Email" type="email" id="email" class="form-control p-1" placeholder="example.email@gmail.com" />
                    <span asp-validation-for="Email" class="text-danger error-style"></span>
                </div>
                <div class="form-group p-2 bg-light mb-1">
                    <label asp-for="Password" class="control-label text-black text-strong">Password</label>
                    <div class="input-group">
                        <input asp-for="Password" type="password" id="password" min="8" required class="form-control p-1" placeholder="Enter at least 8+ characters" inputmode="" />             
                        <span id="eye" class="input-group-text visually-hidden">
                            <i class="fa-solid fa-eye"></i>
                        </span>
                        <span id="eyeslash" class="input-group-text show">
                            <i class="fas fa-eye-slash"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Password" class="text-danger error-style"></span>
                </div>
                <div class="form-check d-flex justify-content-between align-items-center mb-1">
                    <div class="flex-grow-1">
                        <input type="checkbox" class="form-check-input" id="remember">
                        <label class="form-check-label text-smaller" for="remember">Remember me</label>
                    </div>
                    <span><a href="#" id="remember" class="text-smaller">Forgot Password</a></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Sign-in" class="w-100 btn bg-color text-white p-3 rounded-3 btn-sign" />
                </div>
            </form>
        </div>
        <div class="col-md-6 img-show">
            <img src="~/images/login/sign_in.png" alt="defaultloginimg" class="img-fluid bg-color" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}