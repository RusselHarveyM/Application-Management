                            <input type="text" class="form-control" style="border: 1px solid #424856;" value="@TempData["Gender"]">
                        </div>
                    </div>
                </div>
                <div class="row align-items-center justify-content-center text-end mb-3">
                    <div class="col-sm-2">
                        <p class="mb-0">Nationality</p>
                    </div>
                    <div class="col-sm-10">
                        <div class="d-flex column-gap-2">
                            <input type="text" class="form-control" style="border: 1px solid #424856;" value="@TempData["Nationality"]">
                        </div>
                    </div>
                </div>
                <div class="row align-items-center justify-content-center text-end mb-3">
                    <div class="col-sm-2">
                        <p class="mb-0">Address</p>
                    </div>
                    <div class="col-sm-10">
