@{
    ViewData["Title"] = "Reject Offer";
}

<div class="container mt-5">
    <div class="row text-center justify-content-center">
        <div class="col-md-6">
            @if (ViewBag.IsHireRejected == true)
            {
                <h4>You have successfully rejected the job offer.</h4>
            }
            else
            {
                <p>Your token is invalid or has expired.</p>
            }
        </div>
    </div>
</div>