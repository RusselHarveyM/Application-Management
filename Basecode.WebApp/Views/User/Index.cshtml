@*Custom styles for this page*@
<style>
    .btn, .btn:hover {
        color: white;
        background-color: #D02A19;
        border-radius: 0.4rem;
        border-color: #D02A19;
    }

    .btn-edit, .btn-edit:hover {
        color: #425A73;
        background-color: rgba(0, 0, 0, 0);
        border-color: #425A73;
    }

    .btn-delete, .btn-delete:hover {
        color: #D02A19;
        background-color: rgba(0, 0, 0, 0);
        border-color: #D02A19;
    }

    .table {
        border-radius: 0.3rem;
        border-color: rgba(0, 0, 0, 0);
    }

    .table th {
        padding: 1.5rem;
        color: #D02A19;
    }
</style>

<div class="container-fluid d-flex justify-content-center mt-5">
    <h1>Users List</h1>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-2">
            <form>
                <input type="text" class="form-control" placeholder="Search users...">
            </form>
        </div>
        <div class="col">
            <a class="btn btn-primary" role="button">All</a>
            <a class="btn btn-primary" role="button">Human Resources</a>
            <a class="btn btn-primary" role="button">Deployment Team</a>
        </div>

        <div class="d-flex col-2 justify-content-md-end">
            <a class="btn btn-primary" role="button" data-bs-toggle="modal" data-bs-target="#registerModal"><i class="fa-solid fa-user-plus"></i> ADD USER</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
                <table class="table table-striped text-center align-middle mt-2 overflow-hidden">
                    <tr>
                        <th>User ID</th>
                        <th>Role</th>
                        <th>Full Name</th>
                        <th>Username</th>
                        <th>Email Address</th>
                        <th></th>
                        <th></th>
                    </tr>

                @foreach (var user in users)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.Role</td>
                        <td>@user.FullName</td>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td><a class="btn btn-edit" role="button"><i class="fa-regular fa-pen-to-square icon-white"></i> EDIT</a></td>
                        <td><a class="btn btn-delete" role="button"><i class="fa-solid fa-trash-can icon-white"></i> DELETE</a></td>
                    </tr>
                }
                </table>
        </div>
    </div>
</div>