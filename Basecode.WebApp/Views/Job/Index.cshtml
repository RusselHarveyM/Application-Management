@{
    // Dummy data for dynamic cards
    var dummyCards = new[]
    {
        new { Title = "Job Title 1", Location = "Location 1", JobType = "Type 1", WorkSetup = GetRandomWorkSetup() },
        new { Title = "Job Title 2", Location = "Location 2", JobType = "Type 2", WorkSetup = GetRandomWorkSetup() },
        new { Title = "Job Title 3", Location = "Location 3", JobType = "Type 3", WorkSetup = GetRandomWorkSetup() },
        new { Title = "Job Title 4", Location = "Location 4", JobType = "Type 4", WorkSetup = GetRandomWorkSetup() }
    };

    // Method to get a random work setup value
    string GetRandomWorkSetup()
    {
        var workSetups = new[] { "remote", "onsite", "hybrid" };
        var random = new Random();
        var index = random.Next(workSetups.Length);
        return workSetups[index];
    }
}

<style>
    .card {
        border: 1px solid lightgray;
    }
</style>

<div class="jobContainer">
    <h1>Search <span style="color: red;">Jobs</span></h1>

    <div class="searchFilter">
        <input type="text" placeholder="Enter keywords">
        <select name="location">
            <option value="">All Locations</option>
            <option value="location1">Location 1</option>
            <option value="location2">Location 2</option>
            <option value="location3">Location 3</option>
        </select>
        <select name="jobType">
            <option value="">All Job Types</option>
            <option value="type1">Type 1</option>
            <option value="type2">Type 2</option>
            <option value="type3">Type 3</option>
        </select>
    </div>

    <div class="row mt-4">
        @foreach (var card in dummyCards)
        {
            <div class="col-sm-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@card.Title</h5>
                        <p class="card-text">Location: @card.Location</p>
                        <p class="card-text">Job Type: @card.JobType</p>
                        <p class="card-text">Work Setup: @card.WorkSetup</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
